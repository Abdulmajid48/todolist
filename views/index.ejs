
    <body class="d-flex h-100 text-center text-bg-dark" data-new-gr-c-s-check-loaded="14.1136.0" data-gr-ext-installed="">
        <%- include("header.ejs")%>
            <main class="px-3">
                <div class="list">
                    <ul class="list-group">
                
                
                        <li class="form reg list-group-item">
                
                            <% myWishList.forEach(item=> { %>
                
                                <p>
                                    <input class="form-check-input mt-0" type="checkbox" value=""
                                        aria-label="Checkbox for following text input" id="item">
                
                                    <label for="item">
                                        <%= item %>
                                    </label>
                
                                </p>
                
                                <% }) %>
                
                        </li>
                
                        <form class="input-group mb-3 reg" action="/submit" method="POST">
                            <input type="text" class="form-control" aria-label="Text input with checkbox" name="wish" required>
                            <button type="submit" class="btn btn-outline-danger"> Add </button>
                
                
                        </form>
                        <form action="/erase" method="post">
                            <button type="submit" class="btn btn-lg btn-light fw-bold border-white bg-white"> Erase All </button>
                        </form>
                
                
                    </ul>
                
                </div>
            </main>

              
           
                <h1>Wishlist</h1>
                <p class="lead">This is a one page Todolist</p>
             
           
    
            <footer class="mt-auto text-white-50">
                <p> <a href="" class="text-white">Planify</a>, by <a
                        href="https://twitter.com/aladejanaamajid" class="text-white">Abdul-Majid Aladejana</a>.</p>
                        <p><i class="fa-regular fa-copyright"></i> <%= date %></p>
            </footer>
    </body>
   
    

    

   
